<div class="container">

<h1>Homework Management App</h1>


<h3>Please log-in or sign-up</h3>


<form  action="auth/signup" method="POST">
  <div class="form-group">
    <div class="radio-inline"><label>
      <input type="radio" id="roles" name="role" value="teacher">Teacher</label>
    </div>
    <div class="radio-inline"><label>
      <input type="radio" id="roles" name="role" value="student">Student</label>
    </div>
    <div class="radio-inline"><label>
      <input type="radio" id="roles" name="role" value="parent">Parent</label>
    </div>
  </div>
  <div class="form-group">
    <label for="authEmail">Email:</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authName">Name:</label>
    <input id="authName" class="form-control" type="text" name="name">
  </div>

  <div class="form-group">
    <label for="authPassword">Password:</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>

  <div class="form-group">
    <label for="school">School:</label>
    <input id="authSchool" class="form-control" type="text" name="school">
  </div>

  <input id="signup"class="btn btn-primary" type="submit" value="Sign Up"></input>
  <input formaction="auth/login" id="login" class="btn btn-primary" type="submit" value="Log In"></input>
</form>
</div>
