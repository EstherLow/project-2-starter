<div class="header">
  <div class="container">
    <div class="row">
      <div class="logo">
       <h1><a href="#">Edit Profile</a></h1>
      </div>
    </div>
  </div>
</div>


<div class="panel-heading">
  <div class="panel-title">Edit Profile</div>
</div>
<div class="panel-body">
  <form action="/profile/edit/:id" method="POST">
    <div class="form-group">
      <div class="col-md-4">
      <label>School</label>
      <select name="school">
        <div class="bfh-selectbox">
        <option>-Please select your school-</option>
        <% schools.forEach(function(item) { %>
        <option id='<%= item.name %>' value="<%=item.name%>"><%= item.name %></option>
        <% if (item._id === user.school) { %>
          document.getElementById(<%= item.name %>).selected === 'selected'
          <% } %>
        <% }) %>

      </div>
    </select>
    </div>
    <div class='col-md-8'>
      <label class='label label-default'>Please enter school name if your school is not on the list</label>
      <input type="text" name="school">
      <input class="btn btn-primary" type="submit" value="Add School">
  </div>
    </div>

      <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="Please enter your full name" type="text" name="name" value="<%= user.name %>">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="email" value="<%= user.email %>" >
      </div>
      <div class="col-sm-2"><input class="form-control btn btn-primary" type="submit" value="Submit"></div>
  </form>
</div>
</div>
</div>
</div>
