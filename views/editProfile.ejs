<div class="container">
  <div class="row">
    <h1>Edit Profile</h1>
  </div>
  <form action="/profile/<%= currentUser._id %>/edit" method="POST">
    <div class="form-group row row">
      <label class="col-2 col-form-label">Name of school: </label>
      <div class="col-6">
        <input class="form-control" type="text" name="school" value="<%= user.school.name %>" >
      </div>
    </div>

    <div class="form-group row">
      <label class="col-2 col-form-label">Name</label>
      <div class="col-6">
        <input class="form-control" placeholder="Please enter your full name" type="text" name="name" value="<%= user.name %>">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-2 col-form-label">Email</label>
      <div class="col-6">
        <input class="form-control" type="text" name="email" value="<%= user.email %>" >
      </div>
    </div>
    <div class="form-group row">
      <div class="col-2">
      </div>
      <div class="col-6">
        <input class="form-control btn btn-primary" type="submit" value="Submit">
      </div>
    </div>
  </form>
</div>
