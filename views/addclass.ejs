<div class="container">
  
  <h3> Current Classes in your school </h3>
  <h5>Please click to join classroom</h5>
  <ul class="inline-list col-sm-12">
    <% classroomsInSchool = school[0].classrooms %>

    <% classroomsInSchool.forEach(function (elem) { %>

      <li class="list-group-item col-sm-3"><%= elem.name %> </li>

      <% }) %>
    </ul>

    <form  class="form-horizontal" action="addclass" method="POST">
      <h3>  Create Classroom </h3>
      <div class="form-group">
        <label class="col-sm-2 control-label" for="name">Name of Class:</label>
        <div class="col-sm-3">
          <input id="name" class="form-control" type="text" name="name">
        </div>
        <label class="col-sm-2 control-label" for="name">School:</label>
        <div class="col-sm-3">
          <input id="name" class="form-control" type="text" name="school" value="<%= school[0].name %>" > </input>
        </div>
        <input class="col-sm-2 btn btn-primary" type="submit" value="Submit">
      </div>
      <div class="form-group">

      </div>

    </form>


  </div>
