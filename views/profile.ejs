<div class="panel-heading">
  <div class="panel-title">Edit Profile</div>
</div>
<div class="panel-body">
  <form action="/auth/accountinfo/:id" method="POST">
      <div class="form-group">
        <label>School</label>
        <input class="form-control" placeholder="Please key in your school name" type="text" name="school">
      </div>
      <div class="form-group">
        <label>Name</label>
        <input class="form-control" placeholder="Please enter your full name" type="text" name="name">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="email" value="<%= user.email %>" >
      </div>
      <div class="col-sm-2"><input class="form-control btn btn-primary" type="submit" value="Submit"></div>
  </form>
</div>
</div>
</div>
</div>
